<% layout('layouts/boilerplate') %>

<div
  class="constiner d-flex justify-content-center alighn-items-center my-5"
>
  <div class="row vw-100">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-cl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1503265192943-9d7eea6fc77a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" class="validated-form" method="post" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success btn-block w-100">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
